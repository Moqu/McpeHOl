<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingBottom="52.0dip">

        <com.viewpagerindicator.TabPageIndicator
            android:id="@+id/tabs"
            style="@style/Widget.TabPageIndicator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0">

            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <FrameLayout
                android:id="@+id/fragment_online_games"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"></FrameLayout>

            <FrameLayout
                android:id="@+id/fragment_personal_center"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"></FrameLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_tab_group"
        android:layout_width="fill_parent"
        android:layout_height="52.0dip"
        android:layout_gravity="bottom"
        android:background="@drawable/downbar"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingTop="1.0dip">

        <CheckBox
            android:id="@+id/main_tab_online_games"
            style="@style/TabButton"
            android:drawableTop="@drawable/tab_home"
            android:text="游戏" />

        <!--<CheckBox-->
            <!--android:id="@+id/main_tab_tools"-->
            <!--style="@style/TabButton"-->
            <!--android:drawableTop="@drawable/tab_find_frd"-->
            <!--android:text="工具" />-->

        <CheckBox
            android:id="@+id/main_tab_personal_center"
            style="@style/TabButton"
            android:drawableTop="@drawable/tab_personal_center"
            android:text="个人中心" />
    </LinearLayout>

</FrameLayout>
